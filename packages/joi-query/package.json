{
  "name": "@sigfox/joi-query",
  "version": "1.0.0",
  "private": false,
  "description": "Joi helpers for url query validation",
  "keywords": [
    "joi",
    "extension",
    "query"
  ],
  "homepage": "https://github.com/sigfox/javascript",
  "bugs": {
